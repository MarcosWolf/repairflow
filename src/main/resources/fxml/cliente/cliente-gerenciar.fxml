<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:id="rootPane" prefHeight="500" prefWidth="800"
            style="-fx-background-color: #F0F0F0;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.marcoswolf.crm.reparos.ui.controller.cliente.ClienteGerenciarController">

    <children>
        <VBox layoutX="30" layoutY="20" prefWidth="740" spacing="15">

            <!-- Cabeçalho -->
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                   text="Gerenciar Clientes" />
            <Separator />

            <!-- Bloco principal (fundo branco) -->
            <VBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-padding: 15; -fx-background-radius: 8;">

                <!-- Barra de busca -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtBuscar" promptText="Buscar por nome..." HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnBuscar" text="Buscar" onAction="#onBuscar"
                            style="-fx-background-color: #1976D2; -fx-text-fill: white;" />
                    <Button fx:id="btnNovo" text="Novo Cliente" onAction="#onNovo"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                </HBox>

                <!-- Tabela -->
                <TableView fx:id="tabelaClientes" prefHeight="380">
                    <columns>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="200" />
                        <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="150" />
                        <TableColumn fx:id="colCidade" text="Cidade" prefWidth="150" />
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
                        <TableColumn fx:id="colAcoes" text="Ações" prefWidth="120" />
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.marcoswolf.repairflow.ui.controller.MainViewController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Arquivo">
          <items>
            <MenuItem mnemonicParsing="false" text="Importar banco de dados" />
            <MenuItem mnemonicParsing="false" text="Exportar banco de dados" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferências" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Fechar" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Clientes">
               <items>
                  <MenuItem fx:id="menuCadastrarCliente" mnemonicParsing="false" text="Cadastrar Cliente" />
                  <MenuItem fx:id="menuGerenciarCliente" mnemonicParsing="false" text="Gerenciar Clientes" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Equipamentos">
          <items>
            <MenuItem fx:id="menuCadastrarEquipamento" mnemonicParsing="false" text="Cadastrar Equipamento" />
            <MenuItem fx:id="menuGerenciarEquipamento" mnemonicParsing="false" text="Gererenciar Equipamentos" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="menuCadastrarTipoEquipamento" mnemonicParsing="false" text="Cadastrar Tipo de Equipamento" />
            <MenuItem fx:id="menuGerenciarTipoEquipamento" mnemonicParsing="false" text="Gerenciar Tipos de Equipamento" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Reparos">
               <items>
                  <MenuItem fx:id="menuCadastrarReparo" mnemonicParsing="false" text="Cadastrar Reparo" />
                  <MenuItem fx:id="menuGerenciarReparo" mnemonicParsing="false" text="Gerenciar Reparos" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuCadastrarStatusReparo" mnemonicParsing="false" text="Cadastrar Status de Reparo" />
                  <MenuItem fx:id="menuGerenciarStatusReparo" mnemonicParsing="false" text="Gerenciar Status de Reparo" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Financeiro">
               <items>
                  <MenuItem mnemonicParsing="false" text="Pagamentos" />
                  <MenuItem mnemonicParsing="false" text="Exportar Relatórios" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Ajuda">
          <items>
            <MenuItem mnemonicParsing="false" text="Sobre" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <AnchorPane fx:id="contentArea"
                  style="-fx-background-color: #2b2b2b;"
                  VBox.vgrow="ALWAYS">
      </AnchorPane>
  </children>
</VBox>

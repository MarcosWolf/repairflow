<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.marcoswolf.crm.reparos.ui.controller.MainViewController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Arquivo">
          <items>
            <MenuItem mnemonicParsing="false" text="Importar banco de dados" />
            <MenuItem mnemonicParsing="false" text="Exportar banco de dados" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferências" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Fechar" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Clientes">
               <items>
                  <MenuItem fx:id="menuCadastrarCliente" mnemonicParsing="false" text="Cadastrar Cliente" />
                  <MenuItem fx:id="menuGerenciarCliente" mnemonicParsing="false" text="Gerenciar Clientes" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Equipamentos">
          <items>
            <MenuItem mnemonicParsing="false" text="Cadastrar Equipamento" />
            <MenuItem mnemonicParsing="false" text="Gererenciar Equipamentos" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cadastrar Tipo de Equipamento" />
            <MenuItem mnemonicParsing="false" text="Gerenciar Tipos de Equipamento" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Reparos">
               <items>
                  <MenuItem mnemonicParsing="false" text="Cadastrar Reparo" />
                  <MenuItem mnemonicParsing="false" text="Gerenciar Reparos" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Cadastrar Status de Reparo" />
                  <MenuItem mnemonicParsing="false" text="Gerenciar Status de Reparo" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Financeiro">
               <items>
                  <MenuItem mnemonicParsing="false" text="Pagamentos" />
                  <MenuItem mnemonicParsing="false" text="Exportar Relatórios" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Ajuda">
          <items>
            <MenuItem mnemonicParsing="false" text="Sobre" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane fx:id="contentArea" maxHeight="-1.0" maxWidth="-1.0" prefHeight="261.0" prefWidth="535.0" style="-fx-background-color: #2b2b2b;" VBox.vgrow="ALWAYS">
         <children>
            <Pane style="-fx-background-color: #2b2b2b;" />
         </children>
    </AnchorPane>
  </children>
</VBox>

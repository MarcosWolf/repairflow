<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.marcoswolf.repairflow.ui.controller.reparo.ReparoFormController"
            style="-fx-background-color: #F0F0F0;">

    <ScrollPane fitToWidth="true"
                fitToHeight="true"
                style="-fx-background-color: #F0F0F0;"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">
        <content>
            <HBox alignment="TOP_CENTER" style="-fx-background-color: #F0F0F0;">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30" />
                </padding>

                <VBox spacing="15" style="-fx-background-color: #F0F0F0;" maxWidth="1200" HBox.hgrow="ALWAYS">

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="lblTitulo"
                               styleClass="titulo-principal"
                               text="Cadastrar Reparo"
                               HBox.hgrow="ALWAYS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnVoltar"
                                minWidth="80"
                                onAction="#voltar"
                                prefHeight="32"
                                styleClass="btn-voltar"
                                text="← Voltar" />
                    </HBox>

                    <Separator />

                    <VBox spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 15; -fx-background-radius: 8;">
                        <Label style="-fx-font-weight: bold;" text="Dados do Reparo" />

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="100" prefWidth="120" maxWidth="150" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
                                <ColumnConstraints minWidth="100" prefWidth="120" maxWidth="150" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>

                            <Label text="Ordem Serviço:" GridPane.rowIndex="0" />
                            <TextField fx:id="txtOrdemServico"
                                      GridPane.columnIndex="1"
                                      GridPane.rowIndex="0"
                                      prefWidth="200"
                                      minWidth="200"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS" />

                            <Label text="Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <ComboBox fx:id="comboCliente"
                                      GridPane.columnIndex="3"
                                      GridPane.rowIndex="0"
                                      prefWidth="200"
                                      minWidth="200"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS" />

                            <Label text="Equipamento:" GridPane.rowIndex="1" />
                            <ComboBox fx:id="comboEquipamento"
                                      GridPane.columnIndex="1"
                                      GridPane.rowIndex="1"
                                      prefWidth="200"
                                      minWidth="200"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS" />

                            <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                            <ComboBox fx:id="comboStatus"
                                      GridPane.columnIndex="3"
                                      GridPane.rowIndex="1"
                                      prefWidth="200"
                                      minWidth="200"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS" />

                            <Label text="Tipo:" GridPane.rowIndex="3" />
                            <TextField fx:id="txtTipo"
                                       editable="false"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="3"
                                       maxWidth="Infinity"
                                       GridPane.hgrow="ALWAYS" />

                            <Label text="Número Série:" GridPane.rowIndex="3" GridPane.columnIndex="2" />
                            <TextField fx:id="txtNumeroSerie"
                                       editable="false"
                                       GridPane.columnIndex="3"
                                       GridPane.rowIndex="3"
                                       maxWidth="Infinity"
                                       GridPane.hgrow="ALWAYS" />

                            <Label text="Data Entrada:" GridPane.rowIndex="4" />
                            <DatePicker fx:id="dateEntrada"
                                        GridPane.columnIndex="1"
                                        GridPane.rowIndex="4"
                                        maxWidth="Infinity"
                                        GridPane.hgrow="ALWAYS" />

                            <Label text="Data Saída:" GridPane.rowIndex="4" GridPane.columnIndex="2" />
                            <DatePicker fx:id="dateSaida"
                                        GridPane.columnIndex="3"
                                        GridPane.rowIndex="4"
                                        maxWidth="Infinity"
                                        GridPane.hgrow="ALWAYS" />

                            <Label text="Defeito:" GridPane.rowIndex="5" GridPane.valignment="TOP" />
                            <TextArea fx:id="txtDescricaoProblema"
                                      prefRowCount="3"
                                      GridPane.columnIndex="1"
                                      GridPane.columnSpan="3"
                                      GridPane.rowIndex="5"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS" />

                            <Label text="Reparo:" GridPane.rowIndex="6" GridPane.valignment="TOP" />
                            <TextArea fx:id="txtServicoExecutado"
                                      prefRowCount="3"
                                      GridPane.columnIndex="1"
                                      GridPane.columnSpan="3"
                                      GridPane.rowIndex="6"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS" />
                        </GridPane>
                    </VBox>

                    <VBox spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 15; -fx-background-radius: 8;">
                        <Label style="-fx-font-weight: bold;" text="Pagamento" />

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="100" prefWidth="120" maxWidth="150" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
                                <ColumnConstraints minWidth="100" prefWidth="120" maxWidth="150" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints minHeight="30" />
                                <RowConstraints />
                            </rowConstraints>

                            <Label text="Valor Serviço:" GridPane.rowIndex="0" />
                            <TextField fx:id="txtValorServico"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="0"
                                       maxWidth="Infinity"
                                       GridPane.hgrow="ALWAYS" />

                            <Label text="Desconto:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <TextField fx:id="txtDesconto"
                                       GridPane.columnIndex="3"
                                       GridPane.rowIndex="0"
                                       maxWidth="Infinity"
                                       GridPane.hgrow="ALWAYS" />

                            <Label text="Data Pagamento:" GridPane.rowIndex="1" />
                            <DatePicker fx:id="datePagamento"
                                        GridPane.columnIndex="1"
                                        GridPane.rowIndex="1"
                                        maxWidth="Infinity"
                                        GridPane.hgrow="ALWAYS" />

                            <Label text="Valor Total:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            <TextField fx:id="txtValorTotal"
                                       editable="false"
                                       style="-fx-font-weight: bold; -fx-text-fill: green;"
                                       GridPane.columnIndex="3"
                                       GridPane.rowIndex="1"
                                       maxWidth="Infinity"
                                       GridPane.hgrow="ALWAYS" />

                            <Label text="Peças:" GridPane.rowIndex="3" GridPane.valignment="TOP" />
                            <VBox spacing="8"
                                  GridPane.columnIndex="1"
                                  GridPane.columnSpan="3"
                                  GridPane.rowIndex="3">
                                <HBox alignment="CENTER_LEFT" spacing="8">
                                    <TextField fx:id="txtPecaDescricao"
                                               promptText="Descrição"
                                               HBox.hgrow="ALWAYS" />
                                    <TextField fx:id="txtPecaQuantidade"
                                               prefWidth="80"
                                               minWidth="60"
                                               promptText="Qtd" />
                                    <TextField fx:id="txtPecaValorUnitario"
                                               prefWidth="120"
                                               minWidth="90"
                                               promptText="Valor unit." />
                                    <Button fx:id="btnAdicionarPeca"
                                            onAction="#adicionarPeca"
                                            text="Adicionar"
                                            minWidth="80" />
                                </HBox>

                                <TableView fx:id="tabela"
                                           VBox.vgrow="ALWAYS"
                                           minHeight="150"
                                           prefHeight="200">
                                    <columns>
                                        <TableColumn fx:id="colDescricao"
                                                     text="Descrição"
                                                     minWidth="100"
                                                     prefWidth="200" />
                                        <TableColumn fx:id="colQuantidade"
                                                     text="Quantidade"
                                                     minWidth="70"
                                                     prefWidth="100" />
                                        <TableColumn fx:id="colValorUnitario"
                                                     text="Valor Unit."
                                                     minWidth="80"
                                                     prefWidth="120" />
                                        <TableColumn fx:id="colValorTotalLinha"
                                                     text="Total"
                                                     minWidth="80"
                                                     prefWidth="120" />
                                        <TableColumn fx:id="colRemover"
                                                     text=""
                                                     minWidth="50"
                                                     prefWidth="50" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </VBox>
                        </GridPane>
                    </VBox>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="btnExcluir"
                                onAction="#excluir"
                                styleClass="excluir"
                                text="Excluir"
                                visible="false"
                                minWidth="100" />
                        <Button fx:id="btnSalvar"
                                onAction="#salvar"
                                styleClass="salvar"
                                text="Salvar"
                                minWidth="100" />
                    </HBox>

                </VBox>
            </HBox>
        </content>
    </ScrollPane>
</AnchorPane>